.comment{
  height:max-content;
}
.comment-first-item{
  display: flex;
  flex-direction: row;
  width:94%;
  margin:20rpx 0 30rpx 10rpx;
  padding-top:10rpx;
  border:1rpx solid #e0dfdf;
  border-style:solid none none none;
}
.comment-first-item image{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  margin-top:10rpx;
}
.comment-first-item view{
  margin-top:10rpx;
  margin-left: 20rpx;
}
.comment-first-item .cont-1{
  margin-top:60rpx;
  position: absolute;
  left:12%;
}
.comment-last-item{
  width:80%;
  position: relative;
  left:14%;
  background-color: #f5f5f5;
  padding-top:5rpx;
}
.comment-last-item .cont-2{
  padding: 5rpx 0 15rpx 20rpx;
}


/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.item{
  text-align: center;
}
.item .oper{
  height:90rpx;
  line-height:90rpx;
  font-size: 34rpx;
}
.oper-exit{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 10rpx;
  text-align: center;
  font-size: 34rpx;
  color: #9c9a9a;
}
.hr{
  border: 1rpx solid #dddcdc;
  border-style: solid none none none;
}