
.content{
  padding-top:20rpx;
  background-color: white;
}
.add{
  width:48%;
  height:160rpx;
  text-align: center;
  font-size: 30rpx;
  margin-right:10rpx;
}
.add image{
  width:60rpx;
  height:60rpx;
}
.scan{
  width:48%;
  height:160rpx;
  text-align: center;
  font-size: 30rpx;
}
.scan image{
  width:70rpx;
  height:60rpx;
}

.hr{
  width:100%;
  height:20rpx;
  background-color: #f2f2f2;
  opacity: 0.8;
}
.show view{
  width:100%;
  height:160rpx;
}
.info image{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  position: relative;
  top:15rpx;
  left:30rpx;
}
.info view{
  position: relative;
  top:-110rpx;
  left:24%;
  font-size:42rpx;
}
.info text{
  position: relative;
  top:-210rpx;
  left:23%;
  font-size: 38rpx;
  color:#aeaeae;
}
.info .delimiter{
  position: relative;
  top:-20rpx;
  left:74%;
  font-size: 56rpx;
  color:#aeaeae;
}
.divider{
  border: 1rpx solid #ececec;
  border-style:solid none none none;
}



/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 150rpx;
  width: 70%;
  overflow: hidden;
  position: absolute;
  top:36%;
  left:15%;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.item .oper{
  height:70rpx;
  line-height: 70rpx;
  margin-left:40rpx;
  font-size: 36rpx;
}
/* 分割线 */
.item .hr1{
  border:1rpx solid #f5f5f5;
  border-style:solid none none none;
}