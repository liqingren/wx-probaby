/* pages/my/my.wxss */

.content{
  margin-top:60rpx;
}
.userInfo{
  margin:0 auto;
  display: flex;
  flex-direction: row;
  margin-bottom: 40rpx;
}
.img image{
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  margin-left:40rpx;
}

.username{
  position: relative;
  top:50rpx;
  left:40rpx;
  font-size:44rpx;
}
.collect{
  margin:0 0 20rpx 100rpx;
}
.count{
  display: flex;
  flex-direction: row;
  text-align: center;
}

.count navigator{
  width:30%;
}
.count view{
  width:30%;
}
.desc{
  display: flex;
  flex-direction: row;
  text-align: center;
}
.desc navigator{
  width:30%;
}
/* 分割线 */
.hr{
  width:100%;
  height:20rpx;
  background-color: #f2f2f2;
  opacity: 0.5;
}
/* 添加宝宝 */
.baby{
  width:100%;
  height:100rpx;
  line-height:100rpx;
}
.baby view{
  font-size: 44rpx;
}

.baby-img{
  width:22px;
  height:24px;
  position: relative;
  top:10rpx;
  left:40rpx;
  margin-right:60rpx;
}
.exit{
  width:100%;
  height:100rpx;
  font-size: 44rpx;
  line-height: 100rpx;
  text-align: center;
}
/* 扫一扫 */
.scan{
  width:100%;
  height:100rpx;
  line-height:100rpx;
  font-size: 44rpx;
  border:1rpx solid #ececec;
  border-style: solid none solid none;
}
.scan .scan-item image{
  width:54rpx;
  height:50rpx;
  position: relative;
  top:10rpx;
  left:36rpx;
  margin-right: 50rpx;
}