/* pages/bigevent/bigevent.wxss */
page{
  margin:20rpx;
  background-color: #f2f2f2;
}
.bigevents{
  padding: 20rpx;
  position: relative;
}
.insert{
  width:92%;
  height:100rpx;
  line-height: 120rpx;
  margin:0 auto;
  background-color: white;
  margin-bottom: 40rpx;
  text-align: center;
}
.insert image{
  width:50rpx;
  height:46rpx;
}
.insert text{
  position: relative;
  top:-14rpx;
  font-size: 36rpx;
  margin-left: 10rpx;
}
.trend {
  left: 0;
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  background-color: #ff9900;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
}
.line {
  position: absolute;
  left: 8rpx;
  height: 100%;
  border-left: 2px solid #e4e7ed;
}
.item {
  position: relative;
  top: -18rpx;
  margin-bottom: 30rpx;
}
.item-title {
  margin-bottom: 20rpx;
  padding-top: 10rpx;
  line-height: 1;
}
.item .item-cont{
  width:90%;
  height:240rpx;
  margin:0 auto;
  background-color: white;
  display: flex;
}
.item-cont .left{
  width:60%;
  text-align: center;
  padding-top: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

}
.item-cont .left view{
  margin-top:20rpx;
}
.item-cont .right{
  width:40%;
  height:240rpx;
  text-align: center;
}
.right image{
  width:210rpx;
  height:210rpx;
  border-radius: 16rpx;
  position: relative;
  top:15rpx;
}
.right video{
  width:200rpx;
  height:210rpx;
  border-radius: 16rpx;
  position: relative;
  top:15rpx;
}
.right .cont{
  width:180rpx;
  height: 200rpx;
  border-radius: 16rpx;
  position: relative;
  top:15rpx;
  left:10rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;/* 垂直居中 */
  justify-content: center;/* 水平居中 */
  font-size: 28rpx;
  padding:10rpx 20rpx 0 20rpx;
  color: #c5ad6b;
}
.cont rich-text{
  /* 最多显示四行内容，多的... */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}