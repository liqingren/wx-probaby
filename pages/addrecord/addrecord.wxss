/* pages/addrecord/addrecord.wxss */
page{
  background-color: #f2f2f2;
}
.content{
  margin-top: 30rpx;
}
.detail{
  display: flex;
  flex-direction: row;
  width:100%;
  height:120rpx;
  background-color: white;
  border:1rpx solid #ececec;
  border-style: none none solid none;
}
.detail text{
  line-height:120rpx;
  margin-left:30rpx;
  font-size: 40rpx;
}
.detail input{
  font-size: 40rpx;
  position: relative;
  top:40rpx;
  left:0rpx;
  right:80rpx;
  text-align: center;
}
.record-time{
  width:100%;
  height:120rpx;
  background-color: white;
}
.record-time text{
  font-size: 40rpx;
  line-height:120rpx;
  margin-left:30rpx;
}
.picker_date{
  position: relative;
  left:12%;
  font-size: 40rpx;
  text-align: right;
}
.save{
  width:100%;
  height:120rpx;
  line-height: 120rpx;
  margin-top:20rpx;
  text-align: center;
  background-color: white;
  font-size: 50rpx;
  color: #ff9900;
}
.save button{
  width:100%;
  height:120rpx;
  line-height: 90rpx;
  background-color: white;
  font-size: 50rpx;
  color: #ff9900;
  font-weight: normal;
}
