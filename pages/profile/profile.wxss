/* pages/profile/profile.wxss */
page{
  background-color: #f2f2f2;
}
.image{
  width:100%;
  height:160rpx;
  background-color: white;
}
.image text{
  line-height:160rpx;
  margin-left:30rpx;
  font-size: 44rpx;
}
.img{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
  float: right;
  margin-right:80rpx;
  position: relative;
  top:25rpx;
  left:-10rpx;
}
.hr{
  width:100%;
  border:1px solid #f5f5f5;
}
.username{
  width:100%;
  height:100rpx;
  background-color: white;
  margin-bottom: 20rpx;
}
.username text{
  line-height:100rpx;
  margin-left:30rpx;
  font-size: 44rpx;
}
.username input{
  float:right;
  font-size: 40rpx;
  position: relative;
  top:20rpx;
  right:88rpx;
  text-align: right;
  color:#aeaeae;
}

.info{
  width:100%;
  height:100rpx;
  background-color: white;
}
.info text{
  line-height:100rpx;
  margin-left:30rpx;
  font-size: 44rpx;
}
.info .delimiter{
  color:#aeaeae;
  position: absolute;
  left:88%;
  font-size:50rpx;
}
.picker_sex{
  position: relative;
  left:52%;
  right:40rpx;
  font-size: 40rpx;
  text-align: right;
  color:#aeaeae;
}
.picker_birth{
  position: relative;
  left:38%;
  font-size: 40rpx;
  text-align: right;
  color:#aeaeae;
}
.picker_city{
  position: absolute;
  top:510rpx;
  left:53%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
  width:240rpx;
  height:100rpx;
  display: block;
  font-size: 40rpx;
  text-align: right;
  color:#aeaeae;
  margin-top:-20rpx;
}
.save{
  width:100%;
  height:100rpx;
  background-color: white;
  margin-top:20rpx;
  text-align: center;
  
}
.save text{
  font-size:50rpx;
  line-height: 100rpx;
}