page{
  margin:20rpx;
}
/* 底部操作框 */
.other{
  width:100%;
  height:100rpx;
  display: flex;
  padding-left:40rpx;
  position: fixed;
  bottom: 0rpx;
  left:-20rpx;
  z-index:1000;
  background-color: white;
  padding-bottom: 20rpx;
}

.other image{
  width:60rpx;
  height:56rpx;
  margin:20rpx;
}
.other button{
  left:160%;
  height:60rpx;
  line-height: 30rpx;
  font-weight: normal;
  background-color: #ff9900;
  color: white;
  margin-top:20rpx;
}

/* 表情包 */
.emoji{
  margin-left:-20rpx;
  margin-bottom: 20rpx;
}
/* 表情包 */
.emoji_screen{
  width: 100%;
  height: 45%;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 100;
}
.other_screen{
  width:100%;
  height:92%;
  position: fixed;
  bottom:0;
  left:0;
  z-index:10;
